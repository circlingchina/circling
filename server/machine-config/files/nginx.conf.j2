server {
  server_name api.circlingchina.org;

  location / {
    proxy_pass http://localhost:4567;
  }

  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/api.circlingchina.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/api.circlingchina.org/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
  if ($host = api.circlingchina.org) {
      return 301 https://$host$request_uri;
  } # managed by Certbot

  server_name api.circlingchina.org;
  listen 80;
  return 404; # managed by Certbot
}